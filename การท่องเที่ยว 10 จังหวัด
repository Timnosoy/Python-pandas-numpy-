# thailand_tourism_analysis.py

import pandas as pd
import matplotlib.pyplot as plt
from matplotlib import rcParams

# ------------------------------
# ‡∏ï‡∏±‡πâ‡∏á‡∏Ñ‡πà‡∏≤‡∏ü‡∏≠‡∏ô‡∏ï‡πå‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢‡πÉ‡∏ô‡∏Å‡∏£‡∏≤‡∏ü
# ------------------------------
rcParams['font.family'] = 'Tahoma'  # ‡∏ü‡∏≠‡∏ô‡∏ï‡πå‡∏†‡∏≤‡∏©‡∏≤‡πÑ‡∏ó‡∏¢ (‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô Angsana New, Cordia New ‡∏ï‡∏≤‡∏°‡∏£‡∏∞‡∏ö‡∏ö)
rcParams['axes.unicode_minus'] = False  # ‡πÅ‡∏™‡∏î‡∏á‡πÄ‡∏Ñ‡∏£‡∏∑‡πà‡∏≠‡∏á‡∏´‡∏°‡∏≤‡∏¢‡∏•‡∏ö‡∏õ‡∏Å‡∏ï‡∏¥
rcParams['font.size'] = 14  # ‡∏Ç‡∏¢‡∏≤‡∏¢‡∏Ç‡∏ô‡∏≤‡∏î‡∏ï‡∏±‡∏ß‡∏≠‡∏±‡∏Å‡∏©‡∏£

# ------------------------------
# ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≤‡∏£‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß
#‡∏õ ------------------------------
data = {
    "‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î": ["‡∏Å‡∏£‡∏∏‡∏á‡πÄ‡∏ó‡∏û‡∏Ø", "‡πÄ‡∏ä‡∏µ‡∏¢‡∏á‡πÉ‡∏´‡∏°‡πà", "‡∏†‡∏π‡πÄ‡∏Å‡πá‡∏ï", "‡∏ä‡∏•‡∏ö‡∏∏‡∏£‡∏µ", "‡∏™‡∏∏‡∏£‡∏≤‡∏©‡∏é‡∏£‡πå‡∏ò‡∏≤‡∏ô‡∏µ",
             "‡∏Å‡∏£‡∏∞‡∏ö‡∏µ‡πà", "‡∏ô‡∏Ñ‡∏£‡∏£‡∏≤‡∏ä‡∏™‡∏µ‡∏°‡∏≤", "‡∏õ‡∏£‡∏∞‡∏à‡∏ß‡∏ö‡∏Ñ‡∏µ‡∏£‡∏µ‡∏Ç‡∏±‡∏ô‡∏ò‡πå", "‡∏Ç‡∏≠‡∏ô‡πÅ‡∏Å‡πà‡∏ô", "‡∏™‡∏á‡∏Ç‡∏•‡∏≤"],
    "‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)": [22.5, 10.2, 9.8, 7.5, 6.2, 5.8, 4.7, 3.9, 3.5, 3.0],
    "‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)": [980, 320, 300, 220, 180, 160, 140, 120, 100, 95],
    "‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à (‡πÄ‡∏ï‡πá‡∏° 5)": [4.6, 4.8, 4.7, 4.3, 4.5, 4.7, 4.2, 4.4, 4.1, 4.0]
}

# ------------------------------
# ‡πÅ‡∏õ‡∏•‡∏á‡πÄ‡∏õ‡πá‡∏ô DataFrame
# ------------------------------
df = pd.DataFrame(data)

# ------------------------------
# ‡πÅ‡∏™‡∏î‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
# ------------------------------
print("üìä ‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏Å‡∏≤‡∏£‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß")
print(df, "\n")

# ------------------------------
# ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏™‡∏ñ‡∏¥‡∏ï‡∏¥‡∏û‡∏∑‡πâ‡∏ô‡∏ê‡∏≤‡∏ô
# ------------------------------
print("üìå ‡∏Ñ‡πà‡∏≤‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô):", df["‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)"].mean())
print("üìå ‡∏Ñ‡πà‡∏≤‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó):", df["‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)"].mean())
print("üìå ‡∏Ñ‡πà‡∏≤‡πÄ‡∏â‡∏•‡∏µ‡πà‡∏¢‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à:", df["‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à (‡πÄ‡∏ï‡πá‡∏° 5)"].mean())

# ------------------------------
# ‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß‡∏°‡∏≤‡∏Å‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î
# ------------------------------
top_tourist = df.loc[df["‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)"].idxmax()]
print("\nüèÜ ‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ó‡∏µ‡πà‡∏°‡∏µ‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß‡∏°‡∏≤‡∏Å‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î:")
print(top_tourist)

# ------------------------------
# ‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ó‡∏µ‡πà‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ‡∏™‡∏π‡∏á‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î
# ------------------------------
top_income = df.loc[df["‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)"].idxmax()]
print("\nüí∞ ‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ó‡∏µ‡πà‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ‡∏™‡∏π‡∏á‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î:")
print(top_income)

# ------------------------------
# ‡∏à‡∏±‡∏î‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ï‡∏≤‡∏°‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ
# ------------------------------
df_sorted = df.sort_values(by="‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)", ascending=False)
print("\nüìå ‡∏à‡∏±‡∏î‡∏≠‡∏±‡∏ô‡∏î‡∏±‡∏ö‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î‡∏ï‡∏≤‡∏°‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ:")
print(df_sorted[["‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î", "‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)"]])

# ------------------------------
# Visualization: ‡∏£‡∏ß‡∏° 3 ‡∏Å‡∏£‡∏≤‡∏ü
# ------------------------------
fig, axes = plt.subplots(3, 1, figsize=(14, 20))  # ‡∏Ç‡∏¢‡∏≤‡∏¢‡∏Ç‡∏ô‡∏≤‡∏î‡∏Å‡∏£‡∏≤‡∏ü

# 1Ô∏è‚É£ ‡∏Å‡∏£‡∏≤‡∏ü‡πÅ‡∏ó‡πà‡∏á - ‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ
axes[0].bar(df["‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î"], df["‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)"], color="skyblue")
axes[0].set_title("‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ‡∏à‡∏≤‡∏Å‡∏Å‡∏≤‡∏£‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß‡∏Ç‡∏≠‡∏á‡πÅ‡∏ï‡πà‡∏•‡∏∞‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î")
axes[0].set_ylabel("‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ (‡∏û‡∏±‡∏ô‡∏•‡πâ‡∏≤‡∏ô‡∏ö‡∏≤‡∏ó)")
axes[0].tick_params(axis='x', rotation=45, labelsize=12)

# 2Ô∏è‚É£ ‡∏Å‡∏£‡∏≤‡∏ü‡πÄ‡∏™‡πâ‡∏ô - ‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß
axes[1].plot(df["‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î"], df["‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)"], marker='o', color='green', linewidth=2)
axes[1].set_title("‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏ú‡∏π‡πâ‡πÄ‡∏Ç‡πâ‡∏≤‡∏ä‡∏°‡πÅ‡∏ï‡πà‡∏•‡∏∞‡∏à‡∏±‡∏á‡∏´‡∏ß‡∏±‡∏î (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)")
axes[1].set_ylabel("‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)")
axes[1].tick_params(axis='x', rotation=45, labelsize=12)
axes[1].grid(True)

axes[2].plot(df["‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à (‡πÄ‡∏ï‡πá‡∏° 5)"], df["‡∏ô‡∏±‡∏Å‡∏ó‡πà‡∏≠‡∏á‡πÄ‡∏ó‡∏µ‡πà‡∏¢‡∏ß (‡∏•‡πâ‡∏≤‡∏ô‡∏Ñ‡∏ô)"], marker='o', color='green', linewidth=3)
axes[2].set_title("‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à (‡πÄ‡∏ï‡πá‡∏° 5)")
axes[2].set_ylabel("‡∏Ñ‡∏ß‡∏≤‡∏°‡∏û‡∏∂‡∏á‡∏û‡∏≠‡πÉ‡∏à (‡πÄ‡∏ï‡πá‡∏° 5)")
axes[2].tick_params(axis='x', rotation=45, labelsize=12)
axes[2].grid(True)


plt.tight_layout(pad=10.0)  # ‡∏Ç‡∏¢‡∏≤‡∏¢‡∏£‡∏∞‡∏¢‡∏∞‡∏´‡πà‡∏≤‡∏á‡∏£‡∏∞‡∏´‡∏ß‡πà‡∏≤‡∏á‡∏Å‡∏£‡∏≤‡∏ü
plt.show()
